{
  "name": "breathe-together-v2",
  "version": "0.0.0",
  "private": true,
  "overrides": {
    "r3f-perf": {
      "@react-three/drei": "$@react-three/drei"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dev:mock": "VITE_USE_MSW=true vite",
    "typecheck": "tsc",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check --write ./src",
    "check:ci": "biome ci ./src",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:perf": "vitest run --testNamePattern='Performance|Gate'",
    "worker:dev": "wrangler dev --config worker/wrangler.toml",
    "worker:deploy": "wrangler deploy --config worker/wrangler.toml",
    "worker:typecheck": "tsc --project worker/tsconfig.json",
    "msw:init": "npx msw init public --save"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/a11y": "^3.0.0",
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "@react-three/uikit": "^1.0.60",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/three": "^0.175.0",
    "@vitejs/plugin-react": "^4.4.1",
    "koota": "^0.4.0",
    "leva": "^0.10.1",
    "lucide-react": "^0.562.0",
    "maath": "^0.10.8",
    "postprocessing": "^6.38.2",
    "r3f-perf": "^7.2.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.18",
    "three": "^0.175.0",
    "tone": "^15.1.22",
    "typescript": "^5.8.3",
    "vite": "^6.0.7",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@react-three/test-renderer": "^9.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/gl": "^6.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "canvas": "^3.2.0",
    "fast-check": "^4.5.3",
    "gl": "^8.1.6",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.12",
    "msw": "^2.12.7",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
